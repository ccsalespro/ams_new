<p id="notice"><%= notice %></p>

<h1>Listing Prospects</h1>

<table>
  <thead>
    <tr>
      <th>Business name</th>
      <th>Contact name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prospects.each do |prospect| %>
      <tr>
        <td><%= prospect.business_name %></td>
        <td><%= prospect.contact_name %></td>
        <td><%= link_to 'Show', prospect %></td>
        <td><%= link_to 'Edit', edit_prospect_path(prospect) %></td>
        <td><%= link_to 'Destroy', prospect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'New Statement', new_prospect_statement_path(prospect_id: prospect.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

