<%= link_to(content_tag(:button, "New Prospect"), choose_descriptions_path) %><br><br>

<% @prospects.each do |prospect| %>
  <div id="main-div">
  <div id="title">
        <p><%= prospect.business_name %></p>
  </div>
        <div id="main_content">
          <p id="main_content_p"><b>Contact Name: </b><%= prospect.contact_name %></p>
          <p id="main_content_p"><b>Phone Number: </b><%= prospect.phone %></p>
          <p id="main_content_p"><b>Contact Email: </b><%= prospect.email %></p>
        </div>
        <div id="buttons">
        <%= link_to(content_tag(:button, 'Edit'), edit_prospect_path(prospect)) %>
        <%= link_to(content_tag(:button, 'Delete'), prospect, method: :delete, data: { confirm: 'Are you sure?' }) %>
        <%= link_to(content_tag(:button, 'Quote'), new_prospect_statement_path(prospect_id: prospect.id)) %>
        </div>
    </div>
<% end %>
