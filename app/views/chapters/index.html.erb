<div class="container">

<h1>Listing Chapters</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr class="total white">
      <th>Name</th>
      <th>Minutes</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @course.chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.name %></td>
        <td><%= chapter.minutes %></td>
        <td><%= link_to 'Show', course_chapter_path(@course.id, chapter.id) %></td>
        <% if user_signed_in? && current_user.admin? %>
        <td><%= link_to 'Edit', edit_course_chapter_path(@course.id, chapter.id) %></td>
        <td><%= link_to 'Destroy', course_chapter_path(@course.id, chapter.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? && current_user.admin? %>
<%= link_to 'New Chapter', new_course_chapter_path %>
<% end -%>

</div>