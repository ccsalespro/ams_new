<p id="notice"><%= notice %></p>

<h1>Listing Custom Fields</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Amount</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @custom_fields.each do |custom_field| %>
      <tr>
        <td><%= custom_field.custom_field_type.name %></td>
        <td><%= custom_field.name %></td>
        <td><%= custom_field.amount %></td>
        <td><%= custom_field.cost %></td>
        <td><%= link_to 'Show', program_custom_field_path(@program, custom_field) %></td>
        <td><%= link_to 'Edit', edit_program_custom_field_path(@program, custom_field) %></td>
        <td><%= link_to 'Destroy', [@program, custom_field], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Custom field', new_program_custom_field_path(@program) %>
