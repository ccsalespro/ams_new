<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="contact-img">
      <h1 class="hidden-xs">Contact Us</h1>
      <h1 class="visible-xs text-center">Contact Us</h1>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row"><!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
        <div class="col-md-8">
            <h3>Send Us A Message</h3>
            <%= form_for(@internal_contact) do |f| %>
              <% if @internal_contact.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@internal_contact.errors.count, "error") %> prohibited this internal_contact from being saved:</h2>

                  <ul>
                  <% @internal_contact.errors.full_messages.each do |message| %>
