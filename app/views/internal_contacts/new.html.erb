                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="field">
                <p class="no-margin"><b>Full Name:</b></p>
                <%= f.text_field :full_name, :class => 'form-control' %>
              </div><br>
              <div class="field">
              <p class="no-margin"><b>Phone Number:</b></p>
                <%= f.text_field :phone_number, :class => 'form-control' %>
              </div><br>
              <div class="field">
                <p class="no-margin"><b>Email address:</b></p>
                <%= f.text_field :email_address, :class => 'form-control' %>
              </div><br>
              <div class="field">
                <p class="no-margin"><b>Message:</b></p>
                <%= f.text_area :message, :class => 'form-control', :rows => 10 %>
              </div><br>
              <div class="actions">
                <button class="btn btn-primary">Send Message</button>
              </div>
            <% end %>

    </div>
    <!-- /.row -->
