<p id="notice"><%= notice %></p>
<h2> Auto Repair Interchange</h2>
<% @total_transactions = 0 %>
<% @total_volume = 0 %>
<% @number_of_inttypes = 0 %>

<% @intcalcitems.each do |item| %>
<%   @total_transactions += item.transactions %>
<%   @total_volume += item.volume %>
<%   @number_of_inttypes += 1 %>
<% end %>
<% @average_ticket = @total_volume / @total_transactions %>
<p><b> Number of Interchange Types: </b><%= @number_of_inttypes %></p>
<p><b> Total Transactions: </b><%= @total_transactions %></p>
<p><b> Total Volume: </b><%= number_to_currency(@total_volume) %></p>
<p><b> Average Ticket: </b><%= number_to_currency(@average_ticket) %></p>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Inttype</th>
      <th>Description</th>
      <th>Transactions</th>
      <th>Percent</th>
      <th>Volume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @intcalcitems.each do |intcalcitem| %>
      <tr>
        <td><%= intcalcitem.inttype.card_type %>
        <td><%= intcalcitem.inttype.description %>
        <td><%= intcalcitem.description_id %>
        <td><%= intcalcitem.transactions %></td>
        <td><%= number_to_percentage((intcalcitem.inttype_percent * 100)) %></td>
        <td><%= intcalcitem.volume %></td>
        <td><%= link_to 'Show', intcalcitem %></td>
        <td><%= link_to 'Edit', edit_intcalcitem_path(intcalcitem) %></td>
        <td><%= link_to 'Destroy', intcalcitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

