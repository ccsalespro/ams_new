<p id="notice"><%= notice %></p>
<h2> Auto Repair Interchange</h2>
<h2>Import Multiple Items</h2>

<%= form_tag import_intcalcitems_path, multipart: true do %>

  <%= file_field_tag :file %><br>
  <%= submit_tag "Import", :class => 'btn btn-default' %>
<% end %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Inttype</th>
      <th>Description</th>
      <th>Transactions</th>
      <th>Percent</th>
      <th>Volume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @intcalcitems.each do |intcalcitem| %>
      <tr>
        <td><%= intcalcitem.inttype.card_type %>
        <td><%= intcalcitem.inttype.description %>
        <td><%= intcalcitem.description_id %>
        <td><%= intcalcitem.transactions %></td>
        <td><%= number_to_percentage((intcalcitem.inttype_percent * 100)) %></td>
        <td><%= intcalcitem.volume %></td>
        <td><%= link_to 'Show', intcalcitem %></td>
        <td><%= link_to 'Edit', edit_intcalcitem_path(intcalcitem) %></td>
        <td><%= link_to 'Destroy', intcalcitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Intcalcitem', new_intcalcitem_path %>
