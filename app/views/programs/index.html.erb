<br>
<div class="container-fluid">
<%= link_to "Program Wizard", new_processor_path, :class => 'btn btn-primary' %><br><br>
<div class="visible-md visible-lg">
<table class="table table-striped table-responsive table-bordered">
  <thead>
    <tr class="white total">
      <th>Processor</th>
      <th>Name</th>
      <th>Min</th>
      <th>Max</th>
      <th>Bonus</th>
      <th>Split</th>
      <th>Basis Points</th>
      <th>Trans Fee</th>
      <th>Terminal</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sorted_programs.each do |program| %>
      <tr>
        <% @processor = Processor.find_by_id(program.processor_id) %>
        <td><%= @processor.name %></td>
        <td><%= program.name %></td>
        <td><%= number_to_currency(program.min_volume) %></td>
        <td><%= number_to_currency(program.max_volume) %></td>
        <td><%= number_to_currency(program.up_front_bonus) %></td>
        <td><%= program.residual_split %></td>
        <td><%= program.min_bp_mark_up %></td>
        <td><%= number_to_currency(program.min_per_item_fee) %></td>
        <td><%= program.system.name %></td>
        <% if program.personal == true || current_user.admin == true %>
        <td class="text-center">
            <ul class="no-dec no-margin no-padding">
            <li class="dropdown no-dec no-margin">
              <a href="#" class="dropdown-toggle a-tag-for-navbar-links pull-right" data-toggle="dropdown"><i class="fa fa-sliders black program-menu" aria-hidden="true"></i></a>
              <ul class="dropdown-menu course-dropdown">
                <li><%= link_to 'Edit', edit_processor_program_path(@processor, program) %></li>
                <li><%= link_to 'Delete', [@processor, program], method: :delete, data: { confirm: 'Are You Sure?' } %></li>
              </ul>
            </li>
            </ul>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

 <!-- visible sm and xs -->
    <div class="container-fluid text-center">

        <div class="visible-xs visible-sm">
            <% @sorted_programs.each do |program| %>
            <% @processor = Processor.find_by_id(program.processor_id) %>
            <div class="col-lg-4">
                <div class="panel panel-primary text-center">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <b><%= program.name %></b>
                        </h3>
                    </div>

                    <ul class="list-group">
                        <li class="list-group-item">
                            <b>Bonus:
                            </b><%= number_to_currency(program.up_front_bonus) %></li>
                        <li class="list-group-item">
                            <b>Split:
                            </b><%= program.residual_split %></li>
                        <li class="list-group-item">
                            <b>Basis Points:
                            </b><%= program.min_bp_mark_up %></li>
                        <% if program.personal == true || current_user.admin == true %>
                          <li class="list-group-item"><%= link_to 'Edit', edit_processor_program_path(@processor, program), class: 'btn btn-primary' %>
                              <%= link_to 'Delete', [@processor, program], method: :delete, data: { confirm: 'Are You Sure?' }, class: 'btn btn-primary' %>
                         </li>
                        <% end -%>
                    </ul>
                </div>
            </div>
            <% end %>
        </div>


</div>
<br>