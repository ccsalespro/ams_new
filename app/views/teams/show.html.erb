<div class="container text-center"><br />
  <div class="well welly center">
	<h1>Welcome Members of <%= @team.name %></h1><br />
		<% @team_user = TeamUser.where(user_id: current_user.id).where(team_id: @team.id).first %>
		<% @manage_ids = [2, 1, 4, 7, 8, 9] %>
		<% if @manage_ids.include? @team_user.team_user_role_id %>
			<h4>Invite User</h4>
			<%= form_for [@team, TeamUser.new] do |f| %>
			  <div>
			    <%= f.text_field :email, required: true %>
			  </div>
			  <%= f.submit "Invite" %><br />
			<% end %>
		<% end %>

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#members" class="black">Members</a></li>
        <li><a data-toggle="tab" href="#posts" class="black">Posts</a></li>
        <li><a data-toggle="tab" href="#reports" class="black">Reports</a></li>
    </ul>

		<div class="tab-content">
		  <div id="members" class="tab-pane fade in active">
		  	<h4>Members</h4>
				<table class="table table-striped table-responsive">
					<thead>
						<tr>
							<th class="text-center">Name</th>
							<th class="text-center">Email</th>
							<th class="text-center">Phone</th>
							<th class="text-center">Role</th>
							<th class="text-center">Status</th>
						</tr>
					</thead>
					<tbody>
						<% @team.users.each do |user| %>
						<% team_user = TeamUser.where(user_id: user.id).where(team_id: @team.id).first %>
						<tr>
							<td><%= user.first_name %> <%= user.last_name %></td>
							<td><%= user.email %></td>
							<td><%= user.phone_number %></td>
							<td>role goes here</td>
							<% if user.confirmed_at == nil %>
							<td><span class="label label-danger">Unconfirmed</span></td>
							<% elsif user.confirmed_at != nil && user.stripe_subscription_id == nil %>
							<td><span class="label label-primary">Trial User</span></td>
							<% elsif user.confirmed_at != nil && user.stripe_subscription_id != nil %>
							<td><span class="label label-success">Active</span></td>
							<% else %>
							<td><span class="label label-info">Unknown Status</span></td>
							<% end %>
						</tr>
						<% end %>
					</tbody>
				</table>
		  </div>

		  <div id="posts" class="tab-pane fade">
		  	<h4>Posts</h4>
		  </div>

		  <div id="reports" class="tab-pane fade">
		  	<h4>Reports</h4>
		  </div>
		</div>
	<%= link_to 'Back to Teams', teams_path, class: 'btn btn-primary' %>
  </div>
</div>



	


