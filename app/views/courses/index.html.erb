<br><br>
<div class="container">

<%= search_form_for @search do |f| %>
  <div class="input-group stylish-input-group clearfix">
    <%= f.search_field :name_cont, :class => 'form-control', :placeholder => 'Search' %>
            <span class="input-group-addon">
                <button type="submit">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </span>
        </div>
        <% end %>
      <br>

<div class="well">
<% @courses.each do |course| %>
        
        <% @course_time = 0 %>
        <% @chapter_time = 0 %>
        <% @lesson_time = 0 %>
        <% course.chapters.each do |chapter| %>
          <% chapter.lessons.each do |lesson| %>
            <% @lesson_time = @lesson_time + lesson.minutes %>
            <% @chapter_time = @lesson_time %>
          <% end -%>
          <% @course_time = @chapter_time %>
        <% end -%>

<h1 class="course-length">
  <%= link_to course.name, course_path(course), :class => 'black' %>
  <span class="pull-right"><b><%= @course_time %></b> Minutes</span><br>
</h1>
<%= course.description %>

<% if course != @courses.last %>
<hr>
<% end -%>

<% end -%>
</div>

</div>


<% if user_signed_in? && current_user.admin? %>
<%= link_to new_course_path, :class => 'btn btn-primary fab-btn' do %>
<i class="fa fa-plus fab-plus" aria-hidden="true"></i>
<% end %>
<% end %>