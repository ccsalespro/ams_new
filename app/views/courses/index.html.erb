<br><br>

<div class="container">

<%= search_form_for @search do |f| %>
  <div class="input-group stylish-input-group clearfix">
    <%= f.search_field :name_or_description_cont, :class => 'form-control', :placeholder => 'Search' %>
            <span class="input-group-addon">
            <% if @search.name_or_description_cont == nil %>
                <button type="submit">
                    <span class="glyphicon glyphicon-search" style="padding-top: 1px !important;"></span>
                </button>
              <% else %>
                <%= link_to courses_path do %>
                  <i class="fa fa-times-circle-o black big-fa" style="color: #575757 !important; padding-top: 1px !important; cursor: pointer; font-size: 20px !important;" aria-hidden="true"></i>
                <% end -%>
              <% end -%>
            </span>
        </div>
        <% end %>
      <br>

      <% if current_user.training_subscribed == false && current_user.admin == false %>
                <div class="well margin-top-edit-prospect-btns">
              <div class="row">
                  <div class="col-sm-8 col-xs-7">
                      <h2 class="cta visible-lg"><strong>Unlimited Access</strong></h2>
                      <h3 class="cta visible-sm visible-md"><strong>Unlimited Access</strong></h3>
                      <h4 class="cta visible-xs cta-font-size"><strong>Unlimited Access</strong></h4>
                  </div>
                  <div class="col-sm-4 col-xs-5 buy-courses-btn">
                      <%= link_to "$19.00 Per Month", new_subscribetocourse_path, class: 'btn btn-primary btn-lg pull-right' %>
                  </div>
              </div>
          </div>
        
      <% end -%>

      <% if current_user.training_subscribed == false && current_user.admin == true %>
          <div class="well margin-top-edit-prospect-btns">
        <div class="row">
            <div class="col-sm-8 col-xs-7">
                <h2 class="cta visible-lg"><strong>Unlimited Access</strong></h2>
                <h3 class="cta visible-sm visible-md"><strong>Unlimited Access</strong></h3>
                <h4 class="cta visible-xs cta-font-size"><strong>Unlimited Access</strong></h4>
            </div>
            <div class="col-sm-4 col-xs-5 buy-courses-btn">
                <%= link_to "Free Admin Access", new_subscribetocourse_path, class: 'btn btn-primary btn-lg pull-right' %>
            </div>
        </div>
    </div>
  
    <% end -%>

<% @courses.each do |course| %>
        
<% @course_time = 0 %>
    <% course.chapters.each do |chapter| %>
      <% chapter.lessons.each do |lesson| %>
       <% if lesson.minutes == nil %>
         <% @course_time = @course_time + 0 %>
        <% else %>
         <% @course_time = @course_time + lesson.minutes %>
        <% end %>
     <% end %>
     <% end -%>

<% if @search.result.count == 1 %>

<div class="col-md-12 hover">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="white no-margin hidden-xs"><%= course.name %><span class="pull-right"><b><%= @course_time %></b>min</span></h4>
                    <h4 class="white no-margin visible-xs"><%= course.name %><span class="pull-right"><b><%= @course_time %></b>min</span></h4>
                </div>
                <div class="panel-body course-panel-height">
                    <p><%= course.description %></p>
                </div>
                <div class="panel-footer special-footer">
                <% if current_user.training_subscribed == true %>
                    <center><%= link_to("View", course_path(course), :class => 'btn btn-default bold' ) %></center>
                <% else %>
                    <center><button class="btn btn-default bold disabled" data-toggle="tooltip" title="Please Subscribe">View</button></center>
                <% end -%>
                </div>
            </div>
        </div>

<% else %>

<div class="col-md-6 hover">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="white no-margin hidden-xs"><%= course.name %><span class="pull-right"><b><%= @course_time %></b>min</span></h4>
                    <h4 class="white no-margin visible-xs"><%= course.name %><span class="pull-right"><b><%= @course_time %></b>min</span></h4>
                </div>
                <div class="panel-body course-panel-height">
                    <p><%= course.description %></p>
                </div>
                <div class="panel-footer special-footer">
                <% if current_user.training_subscribed == true %>
                    <center><%= link_to("View", course_path(course), :class => 'btn btn-default bold' ) %></center>
                <% else %>
                    <center><button class="btn btn-default bold disabled" data-toggle="tooltip" title="Please Subscribe">View</button></center>
                <% end -%>
                </div>
            </div>
        </div>
        <% end -%>

<% end -%>

</div>


<% if user_signed_in? && current_user.admin? %>
<%= link_to new_course_path, :class => 'btn fab-btn white' do %>
<i class="fa fa-plus fab-plus" aria-hidden="true"></i>
<% end %>
<% end %>