<%= form_for ([@prospect, @statement, @comparison]) do |f| %>

<br><br>
	<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 text-center">
	<div id="steponelabel">
		<h3 class="no-margin bold hidden-xs"><%= @statement.statement_month %> || Key Pricing</h3>
		<h4 class="no-margin bold visible-xs"><%= @statement.statement_month %> || Key Pricing</h4><br>
	</div>
	<div id="steptwolabel" class="hidden">
		<h3 class="no-margin bold hidden-xs"><%= @statement.statement_month %> || Other Pricing</h3>
		<h4 class="no-margin bold visible-xs"><%= @statement.statement_month %> || Other Pricing</h4><br>
	</div>
		<div class="well">
			<div id="stepone">
				<div class="col-sm-6">
					<b>Proposal Note:</b><br>
						<%= f.text_area :notes, class: 'form-control' %><br>
				</div>
				<div class="col-sm-6">
					<b>VMD Basis Points</b><br>
					<div class="input-group">
						<div class="input-group-addon">BP</div>
						<%= f.text_field :bp_mark_up, value: number_with_precision(@comparison.bp_mark_up, precision: 0) || 0, class: 'form-control' %><br>
					</div>
				</div>
				<div class="col-sm-6">
						<b>Per Item</b><br>
					<div class="input-group">
						<div class="input-group-addon">$</div>
						<%= f.text_field :per_item_fee, value: number_with_precision(@comparison.per_item_fee, precision: 2) || 0, class: 'form-control' %><br>
					</div>
				</div><div class="clearfix"></div><br>
				<div class="col-sm-6">
					<b>AMEX Basis Points</b><br>
					<div class="input-group">
						<div class="input-group-addon">BP</div>
						<%= f.text_field :amex_bp_mark_up, value: number_with_precision(@comparison.amex_bp_mark_up, precision: 0) || 0, class: 'form-control' %><br>
					</div>
				</div>
				<div class="col-sm-6">
					<b>AMEX Per Item</b><br>
					<div class="input-group">
						<div class="input-group-addon">$</div>
						<%= f.text_field :amex_per_item_fee, value: number_with_precision(@comparison.amex_per_item_fee, precision: 2) || 0, class: 'form-control' %><br>
					</div>
				</div><div class="clearfix"></div><br>
				<div class="col-sm-12">
					<b>Pin Debit Per Item</b><br>
					<div class="input-group">
						<div class="input-group-addon">$</div>
						<%= f.text_field :pin_debit_per_item_fee, value: number_with_precision(@comparison.pin_debit_per_item_fee, precision: 2) || 0, class: 'form-control' %><br>
					</div><div class="clearfix"></div><br>
				</div>
				<a id="stepone_btn" class="btn btn-primary">Next Step <i class="fa fa-angle-right" aria-hidden="true"></i></a>
			</div><div class="clearfix"></div>

			<div id="steptwo" class="hidden">
			<div class="col-sm-6">
					<b>Monthly Fee</b><br>
					<div class="input-group">
						<div class="input-group-addon">$</div>
						<%= f.text_field :monthly_fees, value: number_with_precision(@comparison.monthly_fees, precision: 2) || 0, class: 'form-control' %><br>
					</div>
				</div>
				<div class="col-sm-6">
					<b>Batch Fee</b><br>
					<div class="input-group">
						<div class="input-group-addon">$</div>
						<%= f.text_field :per_batch_fee, value: number_with_precision(@comparison.per_batch_fee, precision: 2) || 0, class: 'form-control' %><br>
					</div>
				</div><div class="clearfix"></div><br>
				<div class="col-sm-6">
					<b>Monthly PCI Fee</b><br>
					<div class="input-group">
						<div class="input-group-addon">$</div>
						<%= f.text_field :monthly_pci_fees, value: number_with_precision(@comparison.monthly_pci_fees, precision: 2) || 0, class: 'form-control' %><br>
					</div>
				</div>
				<div class="col-sm-6">
					<b>Annual Fee</b><br>
					<div class="input-group">
						<div class="input-group-addon">$</div>
						<%= f.text_field :annual_pci_fees, value: number_with_precision(@comparison.annual_pci_fees, precision: 2) || 0, class: 'form-control' %><br>
					</div>
				</div><div class="clearfix"></div><br>
				<div class="col-sm-6">
					<b>Application Fee</b><br>
					<div class="input-group">
						<div class="input-group-addon">$</div>
						<%= f.text_field :application_fee, value: number_with_precision(@comparison.application_fee, precision: 2) || 0, class: 'form-control' %><br>
					</div>
				</div>
				<div class="col-sm-6">
					<b>Annual Fee</b><br>
					<div class="input-group">
						<div class="input-group-addon">$</div>
						<%= f.text_field :annual_fee, value: number_with_precision(@comparison.annual_fee, precision: 2) || 0, class: 'form-control' %><br>
					</div>
				</div><div class="clearfix"></div><br>
				<div class="col-sm-6">
					<b>Monthly Pin Debit Fee</b><br>
					<div class="input-group">
						<div class="input-group-addon">$</div>
						<%= f.text_field :monthly_debit_fee, value: number_with_precision(@comparison.monthly_debit_fee, precision: 2) || 0, class: 'form-control' %><br>
					</div>
				</div>
				<div class="col-sm-6">
					<b>Next Day Funding Fee</b><br>
					<div class="input-group">
						<div class="input-group-addon">$</div>
						<%= f.text_field :next_day_funding_fee, value: number_with_precision(@comparison.next_day_funding_fee, precision: 2) || 0, class: 'form-control' %><br>
					</div>
				</div>

					<%= f.fields_for :cc_fields do |ff| %>
					  <div class="col-sm-6"><br>
					  	<b><%= ff.text_field :name %></b><br>
					  	<div class="input-group">
					  		<div class="input-group-addon">$</div>
					    	<%= ff.text_field :amount, class: 'form-control' %>
					    </div>
					  </div>
					<% end %><div class="clearfix"></div><br>
				<a id="backto_stepone_btn" class="btn btn-primary"><i class="fa fa-angle-left" aria-hidden="true"></i> Last Step</a>
				<%= f.submit "Save", class: 'btn btn-primary' %>
			</div>
		</div>
	</div>
<% end -%>







<script type="text/javascript">
  

stepone_btn.onclick = function() {

  stepone.classList.toggle('visible');
  stepone.classList.toggle('hidden');
  steptwo.classList.toggle('hidden');
  steptwo.classList.toggle('visible');
  steponelabel.classList.toggle('hidden');
  steponelabel.classList.toggle('visible');
  steptwolabel.classList.toggle('hidden');
  steptwolabel.classList.toggle('visible');

}

backto_stepone_btn.onclick = function() {

  stepone.classList.toggle('visible');
  stepone.classList.toggle('hidden');
  steptwo.classList.toggle('hidden');
  steptwo.classList.toggle('visible');
  steponelabel.classList.toggle('hidden');
  steponelabel.classList.toggle('visible');
  steptwolabel.classList.toggle('hidden');
  steptwolabel.classList.toggle('visible');


}

</script>