
<%= div_for(comment) do %>
	<div class="comments_wrapper clearfix">
	<hr class="style-two">
		<div class="pull-left">
			<p class="lead"><%= comment.body %></p>
			<p><small>Commented <strong><%= time_ago_in_words(comment.created_at) %> ago</strong> by <%= comment.user.email %></small></p>
		</div>

		<div class="btn-group pull-right">
			<% if comment.user == current_user -%>
						<%= link_to comment, method: :delete do %>
							<i class="fa fa-trash big-fa black" aria-hidden="true"></i>
						<% end %>
			<% end %>
		</div>
	</div>
<% end %>