<div class="container-fluid text-center" style="padding-top: 10px !important;">

<h1 class="no-margin"><%= @program_processor.name %></h1>
<h3 class="no-margin" style="margin-bottom: 50px !important"><%= @program.name %></h3>
<div class="clearfix"></div>

    <%= form_for(Programuser.new) do |f| %>
            <%= collection_select( :programuser, :user_id, User.where(subscribed: true), :id, :email, {}, { :multiple => false }) %>
            <%= f.hidden_field :program_id, value: @program.id %>
            <%= f.submit "Assign", class: 'btn btn-primary btn-sm', style: 'padding-top: 1px !important; padding-bottom: 1px !important; margin-top: 0px !important; vertical-align: text-top !important;' %>
    <% end -%>

</div>