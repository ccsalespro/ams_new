<p id="notice"><%= notice %></p>

<% if user_signed_in? && current_user.admin? %>

<%= form_tag import_systems_path, multipart: true do %>

  <%= file_field_tag :file, style: 'margin-bottom: 5px !important;', id: 'import_field' %>
  <%= submit_tag "Import", :class => 'btn btn-primary', id: 'import_btn' %>
<% end %>

<% else %>

<h1>Admin Access Only</h1>

<% end -%>

<h1>Listing Systems</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @systems.each do |system| %>
      <tr>
        <td><%= system.name %></td>
        <td><%= link_to 'Show', system %></td>
        <td><%= link_to 'Edit', edit_system_path(system) %></td>
        <td><%= link_to 'Destroy', system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New System', new_system_path %>
