
<p id="notice"><%= notice %></p>
<p>Create One New Interchange Type</p>
<%= link_to 'New Inttype', new_inttype_path %>

<h2>Import Multiple Interchange Types</h2>

<%= form_tag import_inttypes_path, multipart: true do %>

  <%= file_field_tag :file %><br>
  <%= submit_tag "Import", :class => 'btn btn-default' %>
<% end %>

<h1>Listing Inttypes</h1>
<table>
  <thead>
    <tr>
      <th>Card type</th>
      <th>Description</th>
      <th>Percent</th>
      <th>Per item</th>
      <th>Max</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inttypes.each do |inttype| %>
      <tr>
        <td><%= inttype.card_type %></td>
        <td><%= inttype.description %></td>
        <td><%= inttype.percent %></td>
        <td><%= inttype.per_item %></td>
        <td><%= inttype.max %></td>
        <td><%= link_to 'Show', inttype %></td>
        <td><%= link_to 'Edit', edit_inttype_path(inttype) %></td>
        <td><%= link_to 'Destroy', inttype, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


