<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
<%= form_for([@prospect, @statement]) do |f| %>
  <% if @statement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@statement.errors.count, "error") %> prohibited this statement from being saved:</h2>

      <ul>
      <% @statement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="text-center hidden-sm hidden-xs">
  <div class="field">
    <h3>Statement for<br><b><%= @prospect.business_name %></b></h3>
  </div>
  <div class="field">
    <h3>Type is <b><%= @prospect.description_primary%> | <%= @prospect.description_secondary %></b></h3>
  </div>
  </div>
  <div class="text-center visible-sm visible-xs">
  <div class="field"><br>
    <h4 class="custom-font-size-state">Statement For<br><b><%= @prospect.business_name %></b></h4>
  </div>
  <div class="field">
    <h4 class="custom-font-size-state">Type is <b><%= @prospect.description_primary%> | <%= @prospect.description_secondary %></b></h4>
  </div>
  </div><br>
  <div class="well clearfix">
  <div class="field">
      <%= f.label "Statement Month", :class => 'text' %>
      <%= f.text_field(:statement_month, :class => "form-control", :id => "inputdefault") %>
  </div>
  <div class="field">
       <%= f.label "Total Volume", :class => 'text' %>
       <%= f.text_field(:total_vol, :class => "form-control", :id => "inputdefault") %>
  </div>
  <div class="field">
      <%= f.label "American Express Volume", :class => 'text' %>
      <%= f.text_field(:amex_vol, :class => "form-control", :id => "inputdefault") %>
  </div>
  <div class="field">
      <%= f.label "Pin Debit Volume", :class => 'text' %>
      <%= f.text_field(:debit_vol, :class => "form-control", :id => "inputdefault") %>
  </div>
    <div class="field">
      <%= f.label "Average Ticket Size", :class => 'text' %>
      <%= f.text_field(:avg_ticket, :class => "form-control", :id => "inputdefault", :value => (number_with_precision(@statement.avg_ticket, :precision => 2) || 0)) %>
  </div>
  <div class="field">
      <%= f.label "Total Current Fees", :class => 'text' %>
      <%= f.text_field(:total_fees, :class => "form-control", :id => "inputdefault", :placeholder => 'Optional') %>
  </div><br>
  <center>
  <%= button_tag("Create", :class => 'btn btn-primary') %>
  <%= link_to(content_tag(:button, 'Cancel', :class => 'btn btn-primary'), prospects_path) %><br><br>
</center>
  <div class="field">
      <%= f.hidden_field(:prospect_id) %>
  </div>
<% end %>
</div>
</div>
