<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Get the training and technology solutions you need to sell small business owners">
    <meta name="author" content="James Shepherd">
	  <title>CCSalesPro</title>
        <%= stylesheet_link_tag('application', :media => 'all') %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>
	</head> 
<body>
<% flash.each do |name, msg| %>
  <%= content_tag(:div, msg, class: "alert alert-#{name}") %>
<% end %>
  
  <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top nav-custom-styles" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle no-outline" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to root_path do %>
                    <%= image_tag('logo.png', :class => 'navbar-brand') %>
                <% end %>
                
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <% if user_signed_in? %>
                        <li>
                            <%= link_to('Profile', edit_user_registration_path, :class => 'a-tag-for-navbar-links') %>
                        </li>
                        <li>
                            <%= link_to('Log Out', destroy_user_session_path, :method => :delete, :class => 'a-tag-for-navbar-links') %>
                        </li>
                    <% else %>
                        <li>
                             <%= link_to('Sign Up', new_user_registration_path, :class => 'a-tag-for-navbar-links') %>
                        </li>
                        <li>
                            <%= link_to('Sign In', new_user_session_path, :class => 'a-tag-for-navbar-links') %>
                        </li>
                    <% end %>
                    <li>
                        <%= link_to("About", static_about_path, :class => 'a-tag-for-navbar-links') %>
                    </li>
                    <li>
                        <%= link_to("Prospects", prospects_path, :class => 'a-tag-for-navbar-links') %>
                    </li>
                    <li>
                        <%= link_to("Services", static_services_path, :class => 'a-tag-for-navbar-links') %>
                    </li>
                    <li>
                        <%= link_to("Contact", static_contact_path, :class => 'a-tag-for-navbar-links') %>
                    </li>

                   <li>
                    <%= link_to("Blog", blogs_path, :class => 'a-tag-for-navbar-links') %>

                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle a-tag-for-navbar-links" data-toggle="dropdown">Other Pages <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                 <%= link_to("FAQ", static_faq_path ) %>
                            </li>
                            <li>
                                 <%= link_to("404 Error", static_error_path ) %>
                            </li>
                            <li>
                                 <%= link_to("Pricing Table", static_pricing_path ) %>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

<%= yield %>

</body>
</html>