
<div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%= @blog.title %>
                    <small><%= markdown('By ' + @blog.author) %>
                    </small>
                </h1>
                <ol class="breadcrumb">
                    <li><%= link_to 'Home', :controller => 'static', :action => 'index' %></li>
                    <li><%= link_to 'Blog', :controller => 'blogs', :action => 'index' %></li>
                    <li class="active"><%= @blog.title %></li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <hr>

                <!-- Date/Time -->
                <h3 class="text-capitalize"><i class="fa fa-clock-o"></i> Posted <%= time_ago_in_words(@blog.created_at) %> Ago
                <div class="navbar-right">
				<%= link_to 'Edit', edit_blog_path(@blog), :class => 'btn btn-primary' %>
                <%= link_to 'Delete', @blog, method: :delete, data: { confirm: 'Are You Sure?' }, :class => 'btn btn-primary' %>
                </div>
                </h3>
                <hr>

                <!-- Preview Image -->
 
                    <div class="container-fluid">
                    <div class="well">
                    Image Will Go Here<br><%= link_to 'Current Images', images_path %><br><br><br><br><br><br><br><br><br><br>
                    </div>
                    </div>

					<div class="clearfix"></div>

                <!-- Post Content -->
                <%= markdown(@blog.body) %>
				<div class="clearfix"></div>
                <hr>

                <!-- Blog Comments -->

                <!-- Comments Form -->
                <div class="well">
                    <h4>Leave a Comment:</h4>
                    <h3 class="comments_title">
                    <% if @blog.comments.count == 1 %>
                      <%= @blog.comments.count %> Comment
                    <% else %>
                    <%= @blog.comments.count %> Comments
                    <% end  %>
                    </h3>
                    <%= form_for [@blog, Comment.new]  do |f| %>
                      <div class="field">
                        <%= f.text_area :body, class: "form-control" %>
                      </div>
                      <br>
                      <%= f.submit "Add Comment", class: "btn btn-primary" %>
                    <% end %><br>
                     <div id="comments">
                      <%= render :partial => @blog.comments %>
                    </div>
                </div>

                <hr>

               </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
                        <%= search_form_for @search do |f| %>
                                <div class="input-group stylish-input-group">
                                <%=f.search_field :title_or_body_or_author_cont, :class => 'form-control', :placeholder => 'Search' %>
                                <span class="input-group-addon">
                                    <button type="submit">
                                        <span class="glyphicon glyphicon-search"></span>
                                    </button>  
                                </span>
                               </div>
                        <% end %>
                    <!-- /.input-group -->
                </div>

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Blog Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>

                <!-- Side Widget Well -->
                <div class="well">
                    <h4>Side Widget Well</h4>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Inventore, perspiciatis adipisci accusamus laudantium odit aliquam repellat tempore quos aspernatur vero.</p>
                </div>

            </div>

        </div>
        <!-- /.row -->

        <hr>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>