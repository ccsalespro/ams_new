<div class="container-fluid">
<%= form_for @blog, :html => {:multipart => true} do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => 'form-control', :required => true %>
  </div>
    <div class="field">
    <%= f.label 'Writer' %><br>
    <%= f.text_field :author, :class => 'form-control', :placeholder => "Use [Writer Name](https://example.com) to make the writer's name a link", :required => true %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, :class => 'form-control', rows: '15', :required => true %>
  </div>
  <br>
  <div class="actions text-center">
    <%= button_tag("Submit", :class => 'btn btn-primary') %>
  </div>
  <br>
<% end %>
</div>